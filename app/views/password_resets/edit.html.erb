<% content_for :title, "Reset password" %>
<%= render layout: "layouts/auth" do %>
  <%= form_with model: @user, url: edit_password_reset_path, method: :patch do |form| %>
    <div class="flex flex-col gap-4">
      <%= render partial: "partials/form_field", locals: { model: @user, form: form, field_type: :password_field, attribute: :password, options: { placeholder: "Please enter your password", required: true, minlength: 6 } } %>
      <%= render partial: "partials/form_field", locals: { model: @user, form: form, field_type: :password_field, attribute: :password_confirmation, options: { placeholder: "Please confirm your password", required: true, minlength: 6 } } %>
    </div>
    <div class="mt-6">
      <%= render partial: "partials/form_submit", locals: { form: form, button_text: "Reset password" } %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "Back to Log in", login_path, class: "text-sm text-cyan-500 hover:text-cyan-700" %>
  </div>
<% end %>
