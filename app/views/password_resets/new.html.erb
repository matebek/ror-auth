<% content_for :title, "Forgot password" %>
<%= render layout: "layouts/auth" do %>
  <%= form_with model: @user, url: password_reset_path, method: :post do |form| %>
    <div class="flex flex-col gap-4">
      <%= render partial: "partials/form_field", locals: { model: @user, form: form, field_type: :email_field, attribute: :email, options: { placeholder: "Please enter your email address", required: true } } %>
    </div>
    <div class="mt-6">
      <%= render partial: "partials/form_submit", locals: { form: form, button_text: "Request reset link" } %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "Back to Log in", login_path, class: "text-sm text-cyan-500 hover:text-cyan-700" %>
  </div>
<% end %>
