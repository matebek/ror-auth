<% button_type ||= "default" %>
<% button_options ||= {} %>
<% button_type_classes = {
    "default": "bg-cyan-500 hover:bg-cyan-700 focus:outline focus:outline-cyan-200",
    "destroy": "bg-red-500 hover:bg-red-700 focus:outline focus:outline-red-200",
} %>
<% button_type_class = button_type_classes[button_type.to_sym] %>
<%= form.submit button_text, class: "cursor-pointer w-full #{button_type_class} text-white font-bold py-2 px-4 rounded", **button_options %>
